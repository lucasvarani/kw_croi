.container-fluid
  .row.header-especialidades
    .col-md-4
    %h1.col-md-4 Especialidades
    .col-md-4
%section.container.especialidades
  .row
    -counter = 1
    .col-md-5
      -@services.each do |service|
        %ul
          %a{:href => "javascript:void(0)", :class => "item-#{counter}"}
            %li
              =image_tag(service.image_service(:icon))
              = service.title
          -counter = counter + 1
    .col-md-6
      -counter1 = 1
      -classe = ""
      -@services.each do |service|
        .div.conteudo-especialidades{:class => "conteudo-item-#{counter1} #{classe}"}
          =raw(service.description)
        -counter1 = counter1 + 1
        -classe = "hide"
        
  .row.divisao